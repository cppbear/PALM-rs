                  "    use crate::hash_map::{Entry, HashMap};",
                  "",
                  "    // Initialize a new HashMap",
                  "    let mut map: HashMap<&str, u32> = HashMap::new();",
                  "",
                  "    // Create a vacant entry and attempt to replace it",
                  "    let entry = map",
                  "        .entry(\"poneyland\")",
                  "        .and_replace_entry_with(|_k, _v| panic!());",
                  "",
                  "    // Check if the entry is vacant",
                  "    match entry {",
                  "        Entry::Vacant(e) => {",
                  "            assert_eq!(e.key(), &\"poneyland\");",
                  "        }",
                  "        Entry::Occupied(_) => panic!(),",
                  "    }",
                  "",
                  "    // Insert a value into the map",
                  "    map.insert(\"poneyland\", 42);",
                  "",
                  "    // Create an occupied entry and replace it",
                  "    let entry = map",
                  "        .entry(\"poneyland\")",
                  "        .and_replace_entry_with(|k, v| {",
                  "            assert_eq!(k, &\"poneyland\");",
                  "            assert_eq!(v, 42);",
                  "            Some(v + 1)",
                  "        });",
                  "",
                  "    // Check if the entry is occupied",
                  "    match entry {",
                  "        Entry::Occupied(e) => {",
                  "            assert_eq!(e.key(), &\"poneyland\");",
                  "            assert_eq!(e.get(), &43);",
                  "        }",
                  "        Entry::Vacant(_) => panic!(),",
                  "    }",
                  "",
                  "    // Verify the value in the map",
                  "    assert_eq!(map[\"poneyland\"], 43);",
                  "",
                  "    // Attempt to remove the entry",
                  "    let entry = map",
                  "        .entry(\"poneyland\")",
                  "        .and_replace_entry_with(|_k, _v| None);",
                  "",
                  "    // Check if the entry is vacant again",
                  "    match entry {",
                  "        Entry::Vacant(e) => assert_eq!(e.key(), &\"poneyland\"),",
                  "        Entry::Occupied(_) => panic!(),",
                  "    }",
                  "",
                  "    // Verify the entry was removed",
                  "    assert!(!map.contains_key(\"poneyland\"));",
                  "}"
